font-1 = "feather:size=12;3"
font-2 = "FontAwesome:size=8;2"
font-3 = "Noto Sans Mono CJK JP:size=12;2"

;tray-detached = false
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 2
;tray-maxsize = 20
;tray-scale = 1.0
;tray-position = right
;tray-background = ${colors.background}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev



